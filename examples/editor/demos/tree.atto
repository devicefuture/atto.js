trunkHeight = 4
trunkThickness = 4
branches = 6
layers = 6

padding = branches * (layers + 1)

def outChars times, char$
    for i = 1 to times
        print char$;
    next
end

for x = 1 to branches
    for y = 1 to layers
        outChars padding - (x * y), " "
        outChars x * y * 2, "*"
        print
    next
next

for j = 1 to trunkHeight
    outChars padding - (trunkThickness / 2), " "
    outChars trunkThickness, "="
    print
next